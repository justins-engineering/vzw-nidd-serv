{
  "listeners": {
    "*:80": {
      "pass": "routes"
    },
    "*:443": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": [
          "/db*",
          "/firmware*",
          "/vzw*"
        ]
      },
      "action": {
        "pass": "applications/iots"
      }
    },
    {
      "action": {
        "share": [
          "/srv/assets/$uri",
          "/srv/assets/$uri.html"
        ]
      }
    }
  ],
  "applications": {
    "iots": {
      "type": "external",
      "working_directory": "/srv",
      "executable": "/usr/bin/iots",
      "user": "iots"
    }
  }
}
