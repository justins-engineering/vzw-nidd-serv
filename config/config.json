{
  "listeners": {
    "*:80": {
      "pass": "routes"
    },
    "*:443": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": "~^/stop/\\d+"
      },
      "action": {
        "pass": "applications/c-app"
      }
    },
    {
      "action": {
        "share": [
          "/srv/$uri",
          "/srv/$uri.html"
        ]
      }
    }
  ],
  "applications": {
    "c-app": {
      "type": "external",
      "working_directory": "/srv",
      "executable": "/srv/app",
      "user": "niddss"
    }
  }
}
